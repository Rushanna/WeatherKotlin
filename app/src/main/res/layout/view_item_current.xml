<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp"
        android:background="@drawable/background"
        tools:background="@drawable/background">

    <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_marginStart="@dimen/_16dp"
            android:textAllCaps="true"
            android:textColor="@color/_white"
            android:textSize="@dimen/_22sp"
            tools:text="Sunny"
            android:layout_alignParentLeft="true"
            tools:ignore="RtlHardcoded" />

    <ImageView
            android:id="@+id/ivCondition"
            android:layout_width="@dimen/_64dp"
            android:layout_height="@dimen/_64dp"
            android:layout_above="@id/tvCondition"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginStart="@dimen/_16dp"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

    <TextView
            android:id="@+id/tvFeelsLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_32dp"
            android:gravity="end"
            android:textColor="@color/_white"
            android:textSize="@dimen/_16sp"
            tools:text="feels like 10°"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/ivCondition"
            tools:ignore="RtlHardcoded" />

    <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvFeelsLike"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_32dp"
            android:gravity="end"
            android:textColor="@color/_white"
            android:textSize="@dimen/_40sp"
            tools:text="15°"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded" />

    <TextView
            android:id="@+id/tvCityCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_145dp"
            android:layout_marginBottom="@dimen/_130dp"
            android:gravity="end"
            android:textColor="@color/_white"
            android:textSize="@dimen/_16sp"
            tools:ignore="RtlHardcoded"
            tools:text="Country, City" />

    <TextView
            android:id="@+id/tvDataTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/_145dp"
            android:layout_marginBottom="@dimen/_115dp"
            android:gravity="end"
            android:textColor="@color/_white"
            android:textSize="@dimen/_12sp"
            tools:ignore="RtlHardcoded"
            tools:text="Day, month and time" />


</RelativeLayout>